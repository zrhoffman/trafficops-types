{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "ES6",
    "removeComments": true,
    "declaration": true,
    "outDir": "dist/",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
